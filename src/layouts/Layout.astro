  <body>
    <Background />
    <div class="min-h-screen p-4">
      <main
        class="m-auto w-fit sm:absolute sm:top-1/6 sm:left-2/12 sm:m-0 lg:top-1/5"
      >
        <slot />
      </main>
    </div>
  </body>
