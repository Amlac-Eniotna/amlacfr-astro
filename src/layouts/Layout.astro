---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Antoine Calma - Portfolio</title>
  </head>
  <body>
    <Header />
    <main class="h-screen snap-y snap-mandatory overflow-y-auto scroll-smooth">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background: none; /* Suppression de tout fond */
    overflow-y: auto;
  }

  @media (max-width: 640px) {
    main {
      scroll-snap-type: y proximity; /* Rend le snap moins strict sur mobile pour une meilleure UX */
    }
  }
</style>
