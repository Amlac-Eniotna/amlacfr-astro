---
import { Github, Linkedin } from "@lucide/astro";
---

<section
  id="contact"
  class="relative flex min-h-dvh w-full snap-start snap-always flex-col items-center justify-center px-4"
>
  <p class="mb-1 w-fit text-center break-words text-gray-800">
    contact@antoinecalma.fr
  </p>
  <div class="flex w-fit gap-1.5 border-t border-b p-1">
    <a
      class="text-gray-800 hover:text-gray-500"
      href="https://github.com/Amlac-Eniotna"
      ><span class="sr-only">GitHub</span><Github size={20} /></a
    >
    <a
      class="text-gray-800 hover:text-gray-500"
      href="https://www.linkedin.com/in/antoine-calma/"
      ><span class="sr-only">LinkedIn</span><Linkedin size={20} /></a
    >
  </div>
</section>
